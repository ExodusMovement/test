{
  "name": "@exodus/test",
  "version": "0.0.0",
  "author": "Exodus Movement, Inc.",
  "description": "A test suite runner",
  "homepage": "https://github.com/ExodusMovement/test",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExodusMovement/test.git"
  },
  "bugs": {
    "url": "https://github.com/ExodusMovement/test/issues"
  },
  "keywords": [
    "test",
    "expect",
    "jest",
    "node-test"
  ],
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "restricted"
  },
  "type": "module",
  "bin": {
    "exodus-test": "bin/index.js"
  },
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./jest": "./src/jest.js",
    "./tape": "./src/tape.js"
  },
  "files": [
    "bin/babel.cjs",
    "bin/preload.js",
    "src/jest.js",
    "src/jest.fn.js",
    "src/tape.js",
    "!__tests__",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "exodus-test --global --typescript",
    "coverage": "exodus-test --global --typescript --coverage",
    "lint": "run -T eslint ."
  },
  "dependencies": {
    "@babel/register": "^7.0.0",
    "c8": "^9.1.0",
    "expect": "^29.7.0",
    "fast-glob": "^3.2.11",
    "tsx": "^4.16.2"
  },
  "devDependencies": {
    "@types/jest-when": "^3.5.2",
    "jest-when": "^3.6.0"
  }
}
