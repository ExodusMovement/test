{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@exodus/test/jest": ["./src/jest.js"],
      "@exodus/test/node": ["./src/node.js"],
      "@exodus/test/tape": ["./src/tape.js"]
    }
  },
  "include": ["**/*", ".*"],
  "exclude": ["node_modules"]
}
